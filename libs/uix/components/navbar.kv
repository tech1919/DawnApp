#:import get_color_from_hex kivy.utils.get_color_from_hex

<NavbarButton@MDIconButton>
    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
    user_font_size: '4dp'


<NavbarLabel@Label>
    halign: "center"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: None , None
    size: '20dp' , '30dp'
    color: get_color_from_hex("##012241")



<HomeButton>
    orientation: "vertical"
    NavbarButton:
        icon: 'assets/images/home.png'
        on_press:
            root.change_navbar('home')
            app.go_to('home')
    NavbarLabel:
        text: "Home"

<DailyButton>
    orientation: "vertical"
    NavbarButton:
        icon: 'assets/images/daily.png'
        on_press:
            root.change_navbar('daily')
            app.go_to('daily')
    NavbarLabel:
        text: "Daily"

<DiagnoseButton>

    orientation: "vertical"
    NavbarButton:
        icon: 'assets/images/diagnose.png'
        on_press:
            root.change_navbar('diagnose')
            app.go_to('diagnose')
    NavbarLabel:
        text: "Diagnose"

<ProfileButton>

    orientation: "vertical"
    NavbarButton:
        icon: 'assets/images/profile.png'
        on_press:
            root.change_navbar('profile')
            app.go_to('profile')

    NavbarLabel:
        text: "Profile"

<Navbar>:
    MDCard:
        pos_hint: {"center_x": 0.5, "center_y": 0.05}
        md_bg_color: 1,1,1,1
        elevation: 0
        radius: [20]
        size_hint: 1 , None
        size: '100dp' , '90dp'
    BoxLayout:
        size_hint: 1 , 0.2
        HomeButton:
            id :home_btn
        DailyButton:
            id: daily_btn
        DiagnoseButton:
            id: diagnose_btn
        ProfileButton:
            id: profile_btn




