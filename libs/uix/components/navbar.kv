#:import get_color_from_hex kivy.utils.get_color_from_hex

<NavbarButton@MDIconButton>
    pos_hint: {"center_x": 0.5 , "center_y": 0.5}


<NavbarLabel@Label>
    halign: "center"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: None , None
    size: '20dp' , '30dp'
    color: get_color_from_hex("##012241")

<HomeButton@BoxLayout>
    orientation: "vertical"
    NavbarButton:
        id: home_btn
        icon: 'assets/images/home.png'
        on_press:
            app.change_navbar('home')

    NavbarLabel:
        text: "Home"

<DailyButton@BoxLayout>
    orientation: "vertical"
    NavbarButton:
        icon: 'assets/images/daily.png'
        on_press: app.change_navbar('daily')
    NavbarLabel:
        text: "Daily"
<DiagnoseButton@BoxLayout>
    orientation: "vertical"
    NavbarButton:
        icon: 'assets/images/diagnose.png'
        on_press: app.change_navbar('diagnose')
    NavbarLabel:
        text: "Diagnose"

<ProfileButton@BoxLayout>
    orientation: "vertical"
    NavbarButton:
        icon: 'assets/images/profile.png'
        on_press: app.change_navbar('profile')
    NavbarLabel:
        text: "Profile"

<Navbar>:
    MDCard:
        pos_hint: {"center_x": 0.5, "center_y": 0.05}
        md_bg_color: 1,1,1,1
        elevation: 0
        radius: [20]
        size_hint: 1 , None
        size: '100dp' , '90dp'
    BoxLayout:
        size_hint: 1 , 0.2
        HomeButton:

        DailyButton:

        DiagnoseButton:

        ProfileButton:





