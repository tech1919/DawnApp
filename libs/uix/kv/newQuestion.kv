<QButton>
    padding: 10
    pos_hint: {"center_x": 0.5 , "center_y": 0.3}
    orientation: "horizontal"
    md_bg_color: get_color_from_hex("#012241")
    size_hint: 0.9 , 0.08
    elevation: 3
    radius: [20]
    size_hint: 0.9 , None
    size: "100dp" , "40dp"



<YesButton>
    text: 'Yes'
    font_size: '18dp'
    bold: True
    halign: "center"
    valign: "center"
    color: get_color_from_hex('#000000')
