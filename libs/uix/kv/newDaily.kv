#:import get_color_from_hex kivy.utils.get_color_from_hex



<ProgressCard>:
    pos_hint: {"center_x": .5 , "center_y": .8}
    size_hint: 1 , 1
    elevation: 1
    radius: [10]
    padding: 7
    BoxLayout:
        orientation: "horizontal"
        background_color: 0,0,0,0
        Label:
            text: '-- %'
            color: get_color_from_hex('#000000')
            size_hint: 0.15 , 1
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Description"
                color: get_color_from_hex('#000000')
            MDProgressBar:
                min: 0
                max: 100
                color: get_color_from_hex('#FFBA99')
        MDIconButton:
            icon: 'chevron-right'
            pos_hint: {"center_x": .5 , "center_y": 0.5}






<ListLayout>:
    pos_hint: {"center_x": .5 , "center_y": .5}
    spacing: 10
    size_hint: 0.9 , 0.7
    orientation: "vertical"






<DailyLayout>

    BackButton:
        on_press: app.go_to('back')
    MenuButton:
    ListLayout:


    Navbar:



<DailyScreen>
    name: 'daily'
    DailyLayout:

