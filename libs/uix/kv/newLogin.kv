



<LoginInputWidget@MDCard>:
    orientation: "vertical"
    md_bg_color: get_color_from_hex("#FFFFFF")
    size_hint: 0.9 , None
    size: "100dp" , "40dp"
    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
    elevation: 3
    radius: [20]
    MDBoxLayout:
        MDTextField:
            pos_hint: {"center_x": 0.55, "center_y": 0.47}
            halign: "center"
            foreground_color: 0,0,0,1

<LoginButton>:
    padding: 10
    pos_hint: {"center_x": 0.5 , "center_y": 0.3}
    orientation: "vertical"
    md_bg_color: get_color_from_hex("#FFBA99")
    size_hint: 0.9 , 0.08
    elevation: 3
    radius: [20]
    size_hint: 0.9 , None
    size: "100dp" , "40dp"
    Label:
        text: 'LOGIN'
        bold: True
        halign: "center"
        valign: "center"
        pos_hint: {'center_x': .5 , "center_y": .5}
        font_size: '18dp'
    Button:
        id: login_btn
        background_color: 0,0,0,0
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        on_press: root.verify()
<SignupButton>:
    pos_hint: {"center_x": 0.5 , "center_y": 0.3}
    size_hint: 0.9 , None
    size: "100dp" , "100dp"
    MDCard:
        padding: 10
        pos_hint: {"center_x": 0.5 , "center_y": 0.5}
        orientation: "vertical"
        size_hint: 1 , 0.3
        md_bg_color: get_color_from_hex("#FFBA99")
        size_hint: 0.9 , 0.08
        elevation: 3
        radius: [20]
        size_hint: 0.9 , None
        size: "100dp" , "40dp"
        Label:
            text: 'SIGN UP'
            bold: True
            halign: "center"
            valign: "center"
            pos_hint: {'center_x': .5 , "center_y": .5}
            font_size: '18dp'
        Button:
            id: login_btn
            background_color: 0,0,0,0
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.signup()

<LoginTopLabel@Label>:
    font_size: '35dp'
    halign: "center"
    pos_hint: {"center_x": 0.2 , "center_y": 0.85}
    size_hint: 0.9 , None
    size: '100dp' , '100dp'
    bold: True
    color: get_color_from_hex("#FFBA99")
    size_hint: 1 , 0.2

<LoginLabel@Label>:
    halign: "center"
    font_size: '14dp'
    pos_hint: {"center_x": 0.2 , "center_y": .5}

<SocialButton@MDIconButton>
    size_hint: None , None
    size: '40dp' , '40dp'
    pos_hint: {"center_x": 0.5 , "center_y": .5}
    user_font_size: '10dp'


<LoginSocial>:
    pos_hint: {"center_x": .5 , "center_y": .2}
    orientation: 'vertical'
    halign: "center"
    size_hint: 1 , 0.15
    size: '1dp' , '200dp'
    Label:
        text: "or"
        halign: "center"
        font_size: '12dp'
        pos_hint: {"center_x": .5 , "center_y": .7}
    BoxLayout:
        size_hint: None , None
        spacing: 10
        size: 1 , 0.1
        pos_hint: {"center_x": .5 , "center_y": .1}
        halign: "center"
        orientation: 'horizontal'
        SocialButton:
            icon: "assets/images/facebook_logo.png"
            on_press: print('facebook login')
        SocialButton:
            icon: "assets/images/google_logo.png"
            on_press: print('google login')



<InputBox@BoxLayout>
    orientation: "vertical"
    size_hint: 1 , 0.3
    pos_hint: {"center_x": 0.5 , "center_y": 0.6}



<BottomLineButton>
    pos_hint: {"center_x": .5 , "center_y": .05}
    Button:
        background_color: 0,0,0,0
        on_press: app.go_to('signup')








<LoginLayout>:
    spacing: 15
    md_bg_color: get_color_from_hex("#012241")
    orientation: 'vertical'
    LoginTopLabel:
        text: 'Login'

    InputBox:


        LoginLabel:
            text: 'Username'

        LoginInputWidget:
        LoginLabel:
            text: 'Password'

        LoginInputWidget:
        LoginLabel:
            text: 'Forgot password?'
            pos_hint: {"center_x": 0.8 , "center_y": .5}


    LoginButton:
    LoginSocial:

    BottomLineButton:
        Label:
            text: "Don't have an account? Sign Up"




<SignupLayout>:
    md_bg_color: get_color_from_hex("#012241")
    orientation: 'vertical'
    LoginTopLabel:
        text: 'Sign Up'

    InputBox:
        LoginLabel:
            text: 'Username'
        LoginInputWidget:
        LoginLabel:
            text: 'Email'
        LoginInputWidget:
        LoginLabel:
            text: 'Password'
        LoginInputWidget:

    SignupButton:
    LoginSocial:

    BottomLineButton:
        Label:
            text: "Already have an account? Login"



